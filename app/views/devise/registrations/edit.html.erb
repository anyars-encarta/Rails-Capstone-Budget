<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="login-header">
    <%= link_to "", root_path, class: "fas fa-arrow-left" %>
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <div class="actions">
        <%= f.submit "Next", class: "login-btn" %>
    </div>
  </div>

  <div class="user-input">
    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Full Name", class: "name" %>
    </div>
    
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, class: "pass-length" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "password" %>
      <% if @minimum_password_length %>
        <br />
        <em class="pass-length"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "pass-length" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password", class: "password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "pass-length" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Current Password", class: "password" %>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <h3>Cancel my account</h3>

    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

    <%= link_to "Back", :back %>
  </div>
<% end %>
